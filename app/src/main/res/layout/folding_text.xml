<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">

    <ImageView
        android:id="@+id/foldingArrow"
        android:layout_width="10pt"
        android:layout_height="10pt"
        android:layout_weight="0"
        android:padding="2pt"
        app:srcCompat="@drawable/fold_arrow" />

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shortText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="ShortTextPlaceholder" />

        <TextView
            android:id="@+id/longText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="LongTextPlaceholder\nLongTextPlaceholder\nLongTextPlaceholder\nLongTextPlaceholder\nLongTextPlaceholder\n" />
    </LinearLayout>

</LinearLayout>